record(waveform,"$(RULENAME):Rule") {
  field(DESC,"Rule")
  field(SCAN, "Passive")
  field(DTYP,"PDUII")
  field(OUT,  "#B0 C$(CRATE) N$(SLOT) A$(CH) F0@RULE$(RL)")
  field(FTVL,"USHORT")
  field(NELM,"21")
  field(EGU,"tick")
  field(PINI, "YES")
}

